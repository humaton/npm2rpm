require 'rubygems'

$:.push(File.join(File.dirname(__FILE__), '..', 'lib'))

require 'npm2rpm'

metadata = Metadata.new options.package, options.version

spec = Spec.new(metadata)
spec.write
Changelog.new(spec.name, metadata, options).write

puts "Done. Now do this:";
puts "osc add #{spec.name}";
