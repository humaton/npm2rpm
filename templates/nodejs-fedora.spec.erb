# spec file for package <%="nodejs-" + spec.name %>

%global npmname <%= spec.npmname %>
%{?nodejs_find_provides_and_requires}

Name:           <%= "nodejs-" + spec.npmname %>
Version:        <%= spec.version %>
Release:        0
Summary:        <%= spec.summary %>
<% unless spec.homepage.nil? || spec.homepage.empty? -%>
Url:            <%= spec.homepage %>
<% end -%>
Source0:        <%= spec.source %>
<% unless spec.licenses.empty? -%>
License:        <%= spec.licenses.join(" and ") %>
<% else -%>
License:        CHECK(Nodejs)
<% end -%>

BuildRoot:      %{_tmppath}/%{pkg_name}-%{version}-%{release}-root-%(%{__id_u} -n)

BuildRequires:  nodejs-devel

<% spec.build_requires.uniq.sort.each do |d| -%>
# cyclic? BuildRequires: <%= d %>
<% end -%>

<% spec.requires.uniq.sort.each do |d| -%>
BuildRequires: <%= d %>
<% end -%>

<% spec.requires.uniq.sort.each do |d| -%>
Requires: <%= d %>
<% end -%>

%description
<%= spec.description -%>

%prep
%setup -q -n package

%build
#nothing to do

%install
rm -rf %buildroot

mkdir -p %{buildroot}%{nodejs_sitelib}/<%= spec.npmname %>

<% (spec.binfiles||{}).each do |name, target| -%>
rm -f %{buildroot}%{_bindir}/<%= name %>
ln -sf %{_libdir}/node_modules/%{npmname}/<%= target -%> %{buildroot}%{_bindir}/<%= name %>
<% end -%>

%clean
rm -rf %buildroot

%files
%defattr(-,root,root,-)
%{nodejs_sitelib}/<%= spec.npmname %>
<% if spec.binfiles -%>
%{_bindir}/*
<% end %>
%doc LICENSE README.md

%changelog
